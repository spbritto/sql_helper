# ============================================
# CONFIGURAÇÕES DA API
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=True

# ============================================
# OPENAI / LLM (OBRIGATÓRIO)
# ============================================
# Obtenha sua chave em: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-sua-chave-aqui

# Modelo a ser usado (opções: gpt-4-turbo-preview, gpt-3.5-turbo, gpt-4)
OPENAI_MODEL=gpt-4-turbo-preview

# Temperatura (0.0 = mais determinístico, 1.0 = mais criativo)
OPENAI_TEMPERATURE=0.1

# ============================================
# BANCO DE DADOS
# ============================================
DATABASE_URL=sqlite:///./assistente_sql.db

# ============================================
# OCR - TESSERACT (OPCIONAL)
# ============================================
TESSERACT_PATH=C:\\Program Files\\Tesseract-OCR\\tesseract.exe
OCR_LANGUAGE=por

# ============================================
# UPLOAD DE ARQUIVOS
# ============================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=txt,png,jpg,jpeg,pdf

# ============================================
# LOGS
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ============================================
# SEGURANÇA
# ============================================
SECRET_KEY=sua_chave_secreta_super_segura_aqui
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
